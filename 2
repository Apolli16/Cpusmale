zad1.
#include<iostream>
#include<cstdlib>
using namespace std;

int main()
{

    double a, b, c;
    if(a==b && b==c and (a<1e-9 or b<1e-9 or c<1e-9)  )
    cout<< "Wpisz pierwsza liczbe: ";
    cin>> a;
    
    cout<< "Wpisz druga liczbe: ";
    cin>> b ;
    
    cout<< "Wpisz trzecia liczbe: ";
    cin>>c;

    if ( (a > b) && (a>c) )
    cout << "max a="<<a<<endl;
    else
    {
      if ( b > c )
       cout << "max b="<<b<<endl;
         else
           cout << "max c="<<c<<endl;
    }


    if ( (a < b) && (a<c) )
    cout << "min a="<<a<<endl;
    else
    {
      if ( b < c )
       cout << "min b="<<b<<endl;
         else
           cout << "min c="<<c<<endl;
    }
     system("PAUSE");                                    
     return 0;
}


zad1.b
#include<iostream>
#include<cstdlib>
using namespace std;

void zamien(double *a, double *b)
{
    double pom = *a;
            *a = *b;
            *b = pom;
}

 void sortuj(double *a, double *b, double *c)
{
        if(*a>*b)
                zamien(b,a);
        if(*a>*c)
                zamien(c,a);
        if(*b>*c)
                zamien(c,b);
}
 
int main()
{
        double a, b, c;
        
        cout<<"Podaj trzy liczby: ";
        cin>>a>>b>>c;
        
        sortuj(&a,&b,&c); 
        
        cout<<"Liczby posortowane: "<<a<<" "<<b<<" "<<c<<endl;
        
        system("pause");
        return 0;
}


